        padding-top: 0;
        padding-bottom: 0;
    }
}
.postList {
    padding-left: 1em;
}
.postList li {
    list-style: none;
}
.postList li::before {
    content: "</>";
    vertical-align: 2px;
    font-size: .8em;
}
.postList li h3 {
    display: inline-block;
    margin: 0;
    max-width: calc(100% - 40px);
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    vertical-align: bottom;
}
.postList li em {
    white-space: nowrap;
    vertical-align: 2px;
}

.scrollClue {
    overflow: visible;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
}
.scrollClue::after {
    display: none;
    content: ">";
    position: absolute;
    transform: rotate(90deg);
    font-size: 20px;
    color: var(--text-color);
}
/* ************ */
.mainbg {
    /*background-color: black;*/
    z-index: -100;
    width: 100%;
    height: 100vh;
    transition: height 999999s;
    position: fixed;
    top: 0;
    bottom: 0;
}
.mainbg > img {
    position: absolute;
    top: 0;
    left: 0;
    object-fit: cover;
    width: 100vw;
    height: 100vh;
    opacity: 0;
    transition: opacity 1s;
    filter: saturate(0) blur(10px) contrast(50%);
}
.mainbg > img.saturated {
    filter: blur(10px);
    opacity: 0;
    z-index: 2;
}
.mainbg::after {
    content: "";
    width: 100%;
    height: 100%;
    z-index: 4;
    position: absolute;
    top: 0;
    left: 0;
    transition: opacity .5s ease-in;
    opacity: 1;
    background: linear-gradient(140deg, transparent 0%, black 50%, black 100%);
}
.mainbg::before { /* Two because gradient transitions don't work */
    content: "";
    width: 100%;
    height: 100%;
    z-index: 4;
    position: absolute;
    top: 0;
    left: 0;
    transition: opacity .5s ease-in;
    opacity: 0;
    background: linear-gradient(240deg, transparent 0%, black 60%, black 100%);
}
.mainbg.loaded > img:not(.saturated) {
    opacity: .6;
}
.mainbg.night > img:not(.saturated) {
    opacity: 0;
}
.mainbg.night > img.saturated {
    opacity: 1;
}
.mainbg.night::after {
    opacity: 0;
}
.mainbg.night::before {
    opacity: 1;
}
/* ************ */
article {
    display: flex;
    width: 100%;
    padding: 2em 0;
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: wrap;
    position: relative;
}
article > .description {
    flex-direction: column;
    flex-shrink: 1;
    flex-grow: 1;
    flex-basis: 60%;
    padding-right: 2em;
}
article > a {
    flex-grow: 1;
    position: relative;
    text-align: center;
}
article > a > img {
    width: 100%;
    max-width: 300px;
}
article .description a {
    margin-bottom: 1em;
}
article .description a::after {
    content: ">";
    margin-left: .5em;
    vertical-align: 1px;
    font-size: .8em;
}
article i { /* .tag */
