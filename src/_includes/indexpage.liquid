    justify-content:center;
    align-items: center;
}

.socialLinks {
    justify-content: flex-start;
}
.socialLinks > a {
    margin-right: 2em;
    vertical-align: 0px;
}
.socialLinks > a > img {
    vertical-align: -.8em;
    filter: invert(1);
    opacity: 0.75;
    height: 35px;
    margin-right: 6px;
}
.socialLinks a:hover {
