<html lang="en">
<head>
    {%- capture fullTitle %}{{ site.name }} | {{ site.subTitle }}{% endcapture %}
    <title>{{ fullTitle | trimString: 65 }}</title>
    <meta name="viewport" content="width=device-width" />

    <meta charset="UTF-8" />
    <meta name="description" content="{{ site.description | trimString: 155 }}" />
    <meta name="keywords" content="{{ site.keywords }}" />
    <meta name="author" content="{{ site.author }}" />
    
    <!-- openGraph -->
    <meta property="og:site_name" content="{{ site.name }}" />
    <meta property="og:title" content="{{ fullTitle | trimString: 35 }}" />
    <meta property="og:url" content="{{ url }}" />
    <meta property="og:description" content="{{ site.description | trimString: 65 }}" />
    <meta property="og:image" content="{{ site.coverImage }}" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:alt" content="{{ fullTitle | trimString: 65}}" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="website" />
{%- if coverVideo != undefined %}
    <meta property="og:video" content="{{ coverVideo }}" />
    <meta property="og:video:height" content="{{ coverVideoHeight }}" />
    <meta property="og:video:width" content="{{ coverVideoWidth }}" />
{% endif %}

{%- capture unchachedFavicon %}{{ site.favicon }}?cache={{ "now" | date: "%Y%m%d%H%M" }}{% endcapture %}
    <link rel="shortcut icon" href="{{unchachedFavicon}}"  type="image/svg+xml" sizes="any" />
    <link rel="mask-icon" href="{{ unchachedFavicon }}" color="#000000" />
    <meta name="theme-color" content="#ffffff" />
    <link rel="apple-touch-icon" href="{{unchachedFavicon}}" />
    
    <link rel="canonical" href="{{ site.canonicalBase }}{{ page.url }}"/>
    <link rel="preload" href="/css/fonts/lmroman10-regular-webfont.woff2" as="font" type="font/woff2" />

    <link rel="stylesheet" type="text/css" href="/css/main.css" />
    <link rel="stylesheet" type="text/css" href="/css/articlelist.css" />
    <link rel="stylesheet" type="text/css" href="/css/components/toggle.css" />
    <link rel="stylesheet" type="text/css" href="/css/components/header.css" />
    <link rel="stylesheet" type="text/css" href="/css/components/collage.css" />
    <link rel="stylesheet" type="text/css" href="/css/components/dragToScroll.css" />
    <link rel="stylesheet" type="text/css" href="/css/main.print.css" media="print" />
<style>
.hero {
    box-sizing: border-box;
    /* min-width: 450px;*/
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    flex-grow: 100;

    position: relative;
    user-select: none;
}
.hero h1 {
    font-size: 3em;
    margin-top: .5em;
    margin-bottom: 0;
}
.hero h2 {
    margin-top: 0;
    font-size: 1.57em;
}

.githublogo {
    vertical-align: middle;
}
.profilepic {
    height: 200px;
    width: 200px;
    opacity: 0.75;
    border-radius: 50%;
}
.profilewrapper {
    align-self: center;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content:center;
    align-items: center;
}

/* ************ */
.postList {
    padding-left: 1em;
}
.postList li {
    list-style: none;
    padding: 10px 0; /* Lighthouse perfect score */
}
.postList li::before {
    content: "</>";
    font-size: .8em;
    display: inline-block;
    margin-top: .3em;
    vertical-align: top;
}
.postList li a {
  border-bottom: none;
}
.postList li a:hover {
  border-bottom: none;
}
.postList li a:hover h3 {
  text-decoration: underline;
}
.postList li h3 {
    display: inline-block;
    margin: 0;
    max-width: calc(100% - 40px);
    text-overflow: ellipsis;
    overflow: hidden;
    vertical-align: top;
}
.postList li em {
    white-space: nowrap;
    /*vertical-align: top; Not effective since siblings are at top */
    display: inline-block;
    transform: translateY(-5px); /* "Vertical-align" */
}

.scrollClue {
    overflow: visible;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
}
.scrollClue::after {
    display: none;
    content: ">";
    position: absolute;
    transform: rotate(90deg);
    font-size: 20px;
    color: var(--text-color);
}
/* ************ */
.mainbg {
    /*background-color: black;*/
    z-index: -100;
    width: 100%;
    height: 100vh;
    transition: height 999999s;
    position: fixed;
    top: 0;
    left: 0;
}
.mainbg > img {
    position: absolute;
    top: 0;
    left: 0;
    object-fit: cover;
    width: 100vw;
    height: 100vh;
    opacity: 0;
    transition: opacity 1s;
    filter: saturate(0) blur(10px) contrast(50%);
    z-index: 0;
    /*will-change: transform, opacity;*/
}
.mainbg > img.saturated {
    filter: blur(10px);
    opacity: 0;
    z-index: 2;
}
.mainbg::after {
    content: "";
    width: 100%;
    height: 100%;
    z-index: 1;
    position: absolute;
    top: 0;
    left: 0;
    transition: opacity .5s ease-in;
    opacity: 1;
    background: linear-gradient(140deg, transparent 0%, black 50%, black 100%);
}
.mainbg::before { /* Two because gradient transitions don't work */
    content: "";
    width: 100%;
    height: 100%;
    z-index: 3;
    position: absolute;
    top: 0;
    left: 0;
    transition: opacity .5s ease-in;
    opacity: 0;
    background: linear-gradient(240deg, transparent 0%, black 60%, black 100%);
}
.mainbg.loaded > img:not(.saturated) {
    opacity: .6;
}
/*
.mainbg.night > img:not(.saturated) {
    opacity: 0;
}
.mainbg.night::after {
    opacity: 0;
} */
.mainbg.night > img.saturated {
    opacity: 1;
}
.mainbg.night::before {
    opacity: 1;
}

/* ************ */
section, header {
    transition: color .5s;
}
.night {
    --text-dark: #c45018;
}
#recentPosts {
    position: relative;
}
.night #recentPosts .mainportfolio {
    opacity: 0;
    pointer-events: none;
}
#recentPosts .hiddenportfolio {
    position: absolute;
    top: 2em;
    left: 2em;
    right: 2em;
    opacity: 0;
    pointer-events: none;
}
@media only screen and (max-width: 450px) { /* Sync with .viewport/.readerblock */
  #recentPosts .hiddenportfolio {
    left: 0;
    right: 0;
  }
}
@media only screen and (max-height: 800px) {
    #recentPosts {
        padding-top: 0;
        padding-bottom: 0;
    }
    #recentPosts .hiddenportfolio {
      top: 0;
    }
}
.night #recentPosts .hiddenportfolio {
    opacity: 1;
    pointer-events: all;
}

/* **************** */
.knackered {
  font-family: monospace;
  user-select: none;
  will-change: contents;
}
.postList li::before { /* Because it's knackered with monospace, override. */
  margin-top: -.2em;
}
.hiddenportfolio h3 {
  font-family: monospace;
}
</style>
</head>
<body>
    <div class="mainbg">
        <img id="bgimg" src="" alt="background image" />
        <img id="bgimgSaturated" class="saturated" src="" alt="background image, saturated" />
    </div>

    <section class="fullpage center dark" style="min-height: calc(100vh - 150px); background-color: transparent;">
        <div class="horizontalflex viewport">
            <div class="hero" style="margin-top: 2em;">
                <h1><a class="hiddenlink" href="/" style="padding: 0;">{{ site.name }}</a></h1>
            
                <h2>{{ site.subTitle }}</h2>
                <div class="horizontalflex socialLinks">
                    <a class="stealth" href="https://github.com/rgon"><img class="githublogo" src="logo/github.svg" alt="github logo">github.com/rgon</a>
                    <a class="stealth" href="https://instagram.com/gonruizp" target="_blank"><img class="iglogo" src="logo/instagram.svg" alt="instagram logo">instagr.am/gonruizp</a>
                </div>
            </div>

            <div class="profilewrapper">
                {% image "img/profilepic.jpg", "profile picture", "profilepic" %}

                <label class="toggle" for="dayNightToggle" style="margin-top: 1.5em; border-color: #d0d0d03d;">
                    <input name="" type="checkbox" id="dayNightToggle">
                    <div class="toggleFill">
                        <span>Day Mode</span>
                        <span>Night Mode</span>
                    </div>
                </label>
            </div>
        </div>

        <section class="readerblock" style="margin-top: 2em;" id="recentPosts">
            <div class="mainportfolio">
              <h3 class="knackered">Recent Journal Posts:</h3>
              <ul class="postList">
{%- for post in collections.posts reversed -%}
                <li><a href="{{ post.url }}" title="{{ post.data.pageTitle }}">
                  <h3 class="knackered">{{ post.data.pageTitle | trimString: 80 }}</h3>
                  <em>- {{ post.date | date: "%Y-%m-%d" }}</em></a>
                </li>
{%- endfor %}
              </ul>
            </div>

            <div class="hiddenportfolio">
                <h3>Lighting design works:</h3>
                <ul class="postList">
                    <li><a href="/"><h3>Busking performance at Momento Marbella, 2021 [video]</h3></a></li>
                </ul>
            </div>
        </section>
    </section>

    <header class="dark">
        <div class="hero">
            <h1><a class="hiddenlink" href="/" style="padding: 0;">{{ site.name }}</a></h1>
        
            <h2>{{ site.subTitle }}</h2>
        </div>

        <!-- main header title etc -->
        <nav class="viewport">
        <ul>
            <li><a class="stealth" href="/">Journal</a></li>
            <li><a class="stealth" href="/">Projects</a></li>
            <!-- <li><a href="#">Open Source</a></li> -->
            <li><a class="stealth" href="/">Curriculum Vitae</a></li>
            <li><a class="stealth" href="/">Contact</a></li>
        </ul></nav>
        
        <button class="expand" id="expandHeader"><i class="screenreaderAssist">Expand header</i></button>
    </header>

    <div class="scrollClue dark"></div>


    <section class="light fullpage center">
        <div class="viewport articleList">
            <h2>Project Showcase:</h2>

{%- for post in collections.projects %}
            <article>
                <div class="description">
                    <h3><a class="hiddenlink" href="{{post.url}}">{{ post.data.pageTitle }}</a></h3>
{%- assign visibleTags = post.data.tags | filterTags %}
{%- for tag in visibleTags %}
                    <i class="tag" title="View posts tagged with '{{ tag }}'">{{tag}}</i>
{%- endfor %}
                    <p>{{ post.data.description }}</p>
                    <a class="callToAction" href="{{ post.url }}">View Project</a>
                </div>

                <a class="hiddenlink" href="{{post.url}}">{% image post.data.coverImage, "project image" %}</a>
            </article>
{%- endfor %}

            <div class="center">
                <div class="readerblock" style="text-align: center;">
                    <a href="/">View more projects</a> or <a href="/">consult my journal entries</a> for more of my works.
                </div>
            </div>
        </div>
    </section>

    <section class="light" style="padding:0;">
        <div class="collage dragToScroll horizontalMouseScroll">
{%- for i in (1..12) %}
            <div class="hiddenlink item">
                {% image "imgPassthrough/bg_garage.jpg", "projectImage", "projectImage" %}
                <div class="description">
                    <a class="hiddenlink" href="#" draggable="false"><h4>This watever. Very long text showing here, just make sure it fits. ></h4></a>
                    <span>2022-04-22</span>
                </div>
            </div>
{%- endfor %}
        </div>
    </section>

    <footer class="dark center">
        <p style="text-align: center;">Gonzalo Ruiz, independent software consultant and Lighting Designer.</p>
        <p><a href="/contact">Let's have a chat!</a></p>
    </footer>

<script src="js/main.js" type="text/javascript"></script>
<script src="js/components/header.js" type="text/javascript"></script>
<script src="js/components/dragToScroll.js" type="text/javascript"></script>
<script src="js/components/horizontalMouseScroll.js" type="text/javascript"></script>

<script>
document.getElementById("dayNightToggle").checked = false

document.getElementById("dayNightToggle").addEventListener('change', (event) => {
    document.getElementsByTagName("section")[0].classList.toggle("night");
    /*
    document.getElementsByTagName("section")[0].classList.toggle("light");

    document.getElementsByTagName("header")[0].classList.toggle("dark");
    document.getElementsByTagName("header")[0].classList.toggle("light");
    */
    document.querySelector(".mainbg").classList.toggle("night");
})

window.addEventListener('load', () => {
  document.querySelector(".mainbg").style.height = window.innerHeight + 'px' // avoid jump on mobile
  console.log(document.querySelector(".mainbg").style)
  document.getElementById("bgimg").src = "img/bg_garage_lowres.jpg"
  document.getElementById("bgimgSaturated").src = document.getElementById("bgimg").src
  document.querySelector(".mainbg").classList.toggle("loaded")

  // -- knackered text animation
  for (let elem of document.getElementsByClassName('knackered')) {
    if (!elem.getAttribute('aria-label')) {
      elem.setAttribute('aria-label', elem.innerHTML)
    }
  }

  const knackChars = "$&[{}(=*)+]!#/@_-?^|%"
  window.setInterval(() => {
    for (let elem of document.getElementsByClassName('knackered')) {
      let content = elem.getAttribute('aria-label')
      rndIdx = Math.floor(Math.random() * (content.length -1))
      if (content[rndIdx] === " ") rndIdx++ // Changing spaces causes reflows

      content[Math.floor(Math.random() * content.length)] = knackChars[Math.floor(Math.random() * knackChars.length)]
      elem.innerHTML = content.substring(0, rndIdx) + knackChars[Math.floor(Math.random() * knackChars.length)] + content.substring(rndIdx + 1)
    }
  }, 200)
})
</script>
</body>
</html>