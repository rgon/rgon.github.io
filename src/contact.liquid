/* ************ */
.mainbg {
    /*background-color: black;*/
    z-index: -100;
    width: 100%;
    height: 100vh;
    transition: height 999999s;
    position: fixed;
    top: 0;
    left: 0;
}
.mainbg > img {
    position: absolute;
    top: 0;
    left: 0;
    object-fit: cover;
    width: 100vw;
    height: 100vh;
    opacity: 0;
    transition: opacity 1s;
    filter: saturate(0) blur(10px) contrast(50%);
    z-index: 0;
    /*will-change: transform, opacity;*/
}
.mainbg > img.saturated {
    filter: blur(10px);
    opacity: 0;
    z-index: 2;
}
.mainbg::after {
    content: "";
    width: 100%;
    height: 100%;
    z-index: 1;
    position: absolute;
    top: 0;
    left: 0;
    transition: opacity .5s ease-in;
    opacity: 1;
    background: linear-gradient(140deg, transparent 0%, black 50%, black 100%);
}
.mainbg::before { /* Two because gradient transitions don't work */
    content: "";
    width: 100%;
    height: 100%;
    z-index: 3;
    position: absolute;
    top: 0;
    left: 0;
    transition: opacity .5s ease-in;
    opacity: 0;
    background: linear-gradient(240deg, transparent 0%, black 60%, black 100%);
}
.mainbg.loaded > img:not(.saturated) {
    opacity: .6;
}
.mainbg.night > img.saturated {
    opacity: 1;
}
.mainbg.night::before {
    opacity: 1;
}

